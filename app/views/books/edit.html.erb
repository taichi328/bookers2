<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model: @book, local: true, url:book_path(@book.id),method: :patch do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book" %>
        </div>
        <% end %>

        <%= link_to 'Show', book_path(@book.id) %>
        |
        <%= link_to 'Back', books_path %>
      </div>
    </div>
  </div>
</main>