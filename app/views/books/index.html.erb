<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= form_with model: @book do |f| %>

      <h2>User info</h2>
      
      
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
      <a class="btn btn-outline-secondary btn-block edit_user" href="/user">edit</a>



      <h1>New book</h1>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
  </div>
</div>