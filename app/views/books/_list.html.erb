<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <p><%= image_tag current_user.get_profile_image(100,100) %></p>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <a class="btn btn-outline-secondary btn-block edit_user" href="/users/edit">edit</a>


      <%= form_with model: book do |f| %>
      <h1>New book</h1>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>
    </div>